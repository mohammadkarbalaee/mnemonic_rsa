<?xml version="1.0" encoding="utf-8"?>
<resources>

    <dimen name="pi_fontsize_small">12sp</dimen>
    <dimen name="pi_fontsize_normal">14sp</dimen>
    <dimen name="pi_fontsize_title">16sp</dimen>
    <dimen name="pi_fontsize_big">20sp</dimen>
    <dimen name="pi_fontsize_input">20sp</dimen>
    <dimen name="pi_line_height_big">20sp</dimen>

    <style name="PITextAppearance.Title" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/pi_fontsize_title</item>
        <item name="android:typeface">normal</item>
        <item name="android:textColor">@color/pi_primary_text</item>
    </style>

    <style name="PITextAppearance.Title.Bold" parent="PITextAppearance.Title">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PITextAppearance.Title.AllCaps" parent="PITextAppearance.Title">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="PITextAppearance.Small" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">@dimen/pi_fontsize_small</item>
        <item name="android:textColor">@color/pi_primary_text</item>
    </style>

    <style name="PITextAppearance.Default" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/pi_fontsize_normal</item>
        <item name="android:typeface">normal</item>
        <item name="android:textColor">@color/pi_primary_text</item>
    </style>

    <style name="PITextAppearance.Disabled" parent="PITextAppearance.Default">
        <item name="android:textColor">@color/pi_grey</item>
    </style>

    <style name="PITextAppearance.Bold" parent="PITextAppearance.Default">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PITextAppearance.Label" parent="PITextAppearance.Default">
        <item name="android:textSize">@dimen/pi_fontsize_small</item>
        <item name="android:typeface">normal</item>
        <item name="android:textColor">@color/pi_label_text</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="PIActionButton" parent="PITextAppearance.Default" >
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/pi_white</item>
        <item name="android:textSize">@dimen/pi_fontsize_title</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="PITextAppearance.LegalLinks" parent="PITextAppearance.Small">
        <item name="android:textSize">@dimen/pi_fontsize_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/pi_primary_text</item>
    </style>

    <style name="PIEditText.Default" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
    </style>

    <style name="PIEditText.DropDown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
    </style>

    <style name="PITabLayout.Text" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>