<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.NoUI" parent="@android:style/Theme.NoDisplay" />

    <style name="PIPostTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/white</item>
        <!-- Main theme colors -->
        <item name="android:textColor">@color/pi_primary_text</item>
        <!--   your videoApp branding color for the videoApp bar -->
        <item name="colorPrimary">@color/pi_primary_brand_color</item>
        <!--   darker variant for the status bar and contextual videoApp bars -->
        <item name="colorPrimaryDark">@color/pi_primary_dark_brand_color</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/pi_secondary_brand_color</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">@bool/pi_status_bar_text_color_dark</item>
        <!-- Ripple Effect -->
        <item name="colorControlNormal">@color/pi_grey</item>
        <item name="colorControlHighlight">@color/pi_secondary_brand_color</item>
        <item name="colorControlActivated">@color/pi_primary_brand_color</item>
        <item name="rippleColor">@color/pi_primary_dark_brand_color</item>
        <item name="materialButtonStyle">@style/PIButtonStyle.Default</item>
        <item name="android:alertDialogTheme">@style/PIDialogTheme</item>
    </style>

    <style name="Theme.Post.TranslucentActivity" parent="PIPostTheme">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="PIDatePickerTheme">
        <item name="android:datePickerStyle">@style/WheelSpinner</item>
        <item name="buttonBarButtonStyle">@style/PIDatePickerButtonStyle</item>
        <item name="colorControlNormal">@color/pi_secondary_brand_color</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textSize">@dimen/pi_fontsize_normal</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ToolbarTheme"
        parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlHighlight">@color/pi_primary_dark_brand_color</item>
        <item name="colorControlNormal">@color/pi_icon_color_on_primary_brand_color</item>
        <item name="android:textColorSecondary">@color/pi_icon_color_on_primary_brand_color</item>
    </style>
</resources>