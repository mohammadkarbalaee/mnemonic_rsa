<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginBottom="@dimen/process_description_cell_margin"
        android:lineHeight="@dimen/pi_line_height_big"
        android:padding="@dimen/pi_spacing_8dp"
        tools:text="Hier könnte stehen, wie die Identifizierung mit dem gewählten Verfahren funktioniert.\nMultiline!" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/pi_spacing_16dp"
        android:layout_marginEnd="@dimen/pi_spacing_16dp"
        android:adjustViewBounds="true"
        android:padding="@dimen/pi_spacing_8dp"
        tools:src="@drawable/pi_ic_plug" />
</LinearLayout>